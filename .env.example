# Azure Configuration
AZURE_SUBSCRIPTION_ID=<your-azure-subscription-id>
AZURE_RESOURCE_GROUP=<your-resource-group-name>
AZURE_LOCATION=eastus
AZURE_ACR_NAME=<your-acr-name>
AZURE_STORAGE_ACCOUNT=<your-storage-account-name>

# Application Configuration
APP_ENV=development
APP_NAME=AI-Nanny
APP_SECRET_KEY=<generate-with: openssl rand -hex 32>
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_companion
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_DB=ai_companion

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
JWT_SECRET_KEY=<generate-with: openssl rand -hex 32>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# AI/ML API Keys
OPENAI_API_KEY=<your-openai-api-key>
ANTHROPIC_API_KEY=<your-anthropic-api-key>
ELEVENLABS_API_KEY=<your-elevenlabs-api-key>
DEEPGRAM_API_KEY=<your-deepgram-api-key>

# RAG Configuration
RAG_EMBEDDING_PROVIDER=sentence-transformers
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_EMBEDDING_DIMENSION=384
RAG_VECTOR_STORE_PATH=./data/vector_store
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Azure Storage (for production)
AZURE_STORAGE_CONNECTION_STRING=<your-azure-storage-connection-string>
AZURE_BLOB_CONTAINER=documents
AZURE_FILE_SHARE=vectorstore

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Device Configuration
DEVICE_AUTH_TOKEN=<obtain-during-device-registration>
DEVICE_ID=<auto-generated-or-specified>

# Dashboard Configuration
API_BASE_URL=http://localhost:8000

# Monitoring (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=<your-app-insights-connection-string>

# Development/Testing
DEBUG=false
TESTING=false

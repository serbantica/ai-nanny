# =============================================================================
# AI Companion Orchestrator - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=ai-companion-orchestrator
APP_ENV=development                    # development | staging | production
APP_DEBUG=true
APP_SECRET_KEY=change-me-to-a-secure-random-key-min-32-chars
APP_HOST=0.0.0.0
APP_PORT=8000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_companion
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=change-me-to-a-secure-random-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# External API Keys (MOCK VALUES FOR DEV)
# -----------------------------------------------------------------------------
# Anthropic Claude (Required)
ANTHROPIC_API_KEY=sk-ant-mock-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenAI Whisper (Speech-to-Text)
OPENAI_API_KEY=sk-mock-openai-key
WHISPER_MODEL=whisper-1

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=mock-elevenlabs-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Fallback APIs (Optional)
DEEPGRAM_API_KEY=
GOOGLE_CLOUD_TTS_KEY=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_ANALYTICS=true
ENABLE_MULTI_DEVICE=true
ENABLE_OFFLINE_MODE=true
ENABLE_FINE_TUNING=false

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=app.log

# -----------------------------------------------------------------------------
# CORS (for web dashboard)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true
